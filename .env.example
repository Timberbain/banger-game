# Server
PORT=3000
NODE_ENV=production

# Map/asset file location (default: /app/public in Docker, client/public in dev)
MAPS_BASE_DIR=/app/public

# Client static file location (default: /app/public in Docker)
CLIENT_DIST_PATH=/app/public

# Enable Colyseus monitor in production (disabled by default)
ENABLE_MONITOR=0

# Add artificial latency in ms for network testing (dev only)
SIMULATE_LATENCY=0

# Client build-time overrides (optional, auto-detected from page origin)
VITE_SERVER_URL=
VITE_API_URL=
